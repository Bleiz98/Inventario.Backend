@model Inventario.Frontend.Models.Producto

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Crear Producto</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" maxlength="50" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Precio"></label>
                    <input asp-for="Precio" class="form-control" placeholder="Precio"
                           maxlength="10"
                           oninput="this.value = this.value.replace(/[^0-9.]/g, '')" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Stock"></label>
                    <input asp-for="Stock" class="form-control" placeholder="Stock"
                           maxlength="7"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="fa fa-save"></i> Guardar
                        </button>
                        <a href="@Url.Action("Index", "Productos")" class="btn btn-sm btn-primary">
                            <i class="fa fa-ban"></i> Cancelar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
